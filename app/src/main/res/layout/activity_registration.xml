<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="REGISTRATION"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/rec_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/logo"
        android:text="You change this world"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"/>


    <ScrollView
        android:id="@+id/personal_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rec_logo"
        android:layout_marginTop="15dp"
        android:scrollbars="none"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/firstname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="First name"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" Ivan"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/secondname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Second name"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/secondname"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" Ivanov"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="User name"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" User123"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/birthday_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/birthday_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Your birthday"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/birthday"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" 31.12.2000"
                    android:inputType="text|date"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ipaddress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ipaddress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="IP address and port"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/ipaddress"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" 192.168.1.1:1663"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_server_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/login_server_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Login server"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/login_server"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" admin"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_server_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/password_server_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Password server"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/password_server"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" ******"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Number phone"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/number"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" 8 (987) 65-43-210"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Mail"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/mEmailField"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" exaple@mail.ru"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Password"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/mPasswordField"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint=" Interesting"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/password_text_return"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Confirm password"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/password_confirm"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:background="#14ffffff"
                    android:ems="10"
                    android:hint="  ^ - ^"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <android.support.v7.widget.CardView
        android:id="@+id/button_login_cardView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/personal_data"
        android:layout_marginTop="-60dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/mRegBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>