<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/event1"
            android:layout_width="match_parent"
            android:layout_height="247dp"
            android:layout_below="@+id/personal_data"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/settings_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="Settings client"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/darker_gray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="IP address server"/>

                    <EditText
                        android:id="@+id/id_server"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:inputType="textPersonName"
                        android:text=""
                        android:hint="192.168.1.1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="Client ID" />

                    <EditText
                        android:id="@+id/clientID"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:inputType="textPersonName"
                        android:text=""
                        android:hint="androidkt"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="Login server"/>

                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/id_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:inputType="textPersonName"
                        android:text=""
                        android:hint="admin"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:text="Password server"/>

                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/id_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:inputType="textPassword"
                        android:text=""
                        android:hint="******"/>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"
                    android:id="@+id/button_rec_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/personal_data"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:id="@+id/mRecBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Reconection"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/manage1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@+id/personal_data"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="Topic settings"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/darker_gray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/button_pub_cardView"
                        android:layout_width="125dp"
                        android:layout_height="42dp"
                        android:layout_below="@+id/personal_data"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:id="@+id/pub_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Publish"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <EditText
                        android:layout_gravity="center"
                        android:id="@+id/pub_topic"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:inputType="textPersonName"
                        android:text=""
                        android:windowSoftInputMode="stateAlwaysHidden"
                        android:hint="topic"/>

                    <EditText
                        android:layout_gravity="center"
                        android:id="@+id/pub_msg"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:inputType="textPersonName"
                        android:text=""
                        android:windowSoftInputMode="stateAlwaysHidden"
                        android:hint="Message"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="retain" />

                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_gravity="center"
                            android:checked="true"
                            android:text="" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/button_sub_cardView"
                        android:layout_width="125dp"
                        android:layout_height="42dp"
                        android:layout_below="@+id/personal_data"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:id="@+id/sub_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Subscribe"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <EditText
                        android:id="@+id/sub_topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="right"
                        android:hint="topic"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textSize="15dp"
                        android:windowSoftInputMode="stateAlwaysHidden" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/button_unsub_cardView"
                        android:layout_width="125dp"
                        android:layout_height="42dp"
                        android:layout_below="@+id/personal_data"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:id="@+id/unsub_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Unsubscribe"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <EditText
                        android:id="@+id/unsub_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:inputType="textPersonName"
                        android:text=""
                        android:windowSoftInputMode="stateAlwaysHidden"
                        android:hint="topic"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>